@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<head>
    <link rel="stylesheet" href="~/css/progressStyle.css" />
</head>
<body>
    <script type="text/javascript">

        var highD = 3,
            distinction = 5,
            credit = 2,
            pass = 0,
            marginalF = 0,
            fail = 0,
            lowF = 0;

        var noUnits = highD + distinction + credit + pass + marginalF + fail + lowF;

        var hdResult = highD * 7,
            distinctionResult = distinction * 6,
            creditResult = credit * 5,
            passResult = pass * 4,
            marginalResult = marginalF * 3,
            failResult = fail * 2,
            lowResult = lowF * 1;

        var gpaResult = (hdResult + distinctionResult + creditResult + passResult + marginalResult + failResult + lowResult) / noUnits;
        function calculateGPA() {
            document.getElementById("myResult").innerHTML = gpaResult;
            document.getElementById("unitAmount").innerHTML = "Number of units: " + noUnits;
        }
        window.onload = calculateGPA;
    </script>
    <img src="~/images/home_pictures/Homepagepicture.jpg" width="102.7%" height="70%" style="margin-left: -1.4%" />
    <hr />
    <div class="row" style="height: 30%; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" align="center">
        <div class="col-sm-6">
            <h3 style="font-size:50px"><strong><u>Current GPA</u></strong></h3>
            <div><span class="count" id="myResult" style="font-size:120px">6.1</span></div>
            <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
            <script src="js/gpa_animation.js"></script>
            <p id="unitAmount" style="font-size:40px"></p>
            <p style="font-size:30px">Units Exempted: 8 (from Griffith)</p>
            <button class="btn btn-primary" onclick="rerun()">Re-Calculate GPA</button>
        </div>
        <div class="col-sm-6">
            <script src="~/js/progressbart.js"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
            <div class="col-md-4">
                <div class="bar_container">
                    <div id="main_container">
                        <div id="pbar" class="progress-pie-chart" data-percent="0">
                            <div class="ppc-progress">
                                <div class="ppc-progress-fill" id="progress-fill"></div>
                            </div>
                            <div class="ppc-percents" id="ppc-percents">
                                <div class="pcc-percents-wrapper">
                                    <span>%</span>
                                </div>
                            </div>
                        </div>

                        <progress style="display: none" id="progress_bar" value="0" max="75"></progress>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row" style="height: 30%; font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" align="center">
        <h3 style="font-size:50px"><strong><u>Course Progress</u></strong></h3>
    </div>
